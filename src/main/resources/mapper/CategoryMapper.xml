<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cc.wuque.mapper.CategoryMapper">
    <select id="findAllCategory" resultType="cc.wuque.domain.Category">
        select * from p_category
    </select>
    <select id="isCategory" resultType="cc.wuque.domain.Category">
        select * from p_category where cname = #{cname}
    </select>
    <insert id="addCategory">
        insert into p_category(cname) value (#{cname})
    </insert>
    <select id="findOneByCid" resultType="cc.wuque.domain.Category">
        select * from p_category where cid = #{cid}
    </select>
    <update id="updateCategory">
        update p_category set cname = #{cname} where cid = #{cid}
    </update>
</mapper>